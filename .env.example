# Roma Flooring Designs — Environment Variables
# Copy to .env and fill in production values

# ── Database ──
DB_NAME=flooring_pim
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_strong_password_here

# ── MinIO (S3-compatible object storage) ──
MINIO_ROOT_USER=CHANGE_ME_minio_user
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password

# ── Stripe ──
STRIPE_SECRET_KEY=sk_live_your_key_here

# ── Shipping: EasyPost ──
EASYPOST_API_KEY=

# ── Shipping: Freightview ──
FREIGHTVIEW_CLIENT_ID=
FREIGHTVIEW_CLIENT_SECRET=

# ── Vendor Portals: MSI ──
MSI_PORTAL_USERNAME=
MSI_PORTAL_PASSWORD=

# ── Vendor Portals: TradePro Exchange (Daltile/AO/Marazzi) ──
TRADEPRO_USERNAME=
TRADEPRO_PASSWORD=

# ── Vendor Portals: Elysium Tile ──
ELYSIUM_USERNAME=
ELYSIUM_PASSWORD=

# ── Vendor Portals: Arizona Tile ──
ARIZONA_USERNAME=
ARIZONA_PASSWORD=

# ── Vendor Portals: Tri-West (DNav / Décor 24) ──
TRIWEST_USERNAME=
TRIWEST_PASSWORD=

# ── SMTP (email notifications) ──
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@romaflooringdesigns.com

# ── AWS (backups) ──
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2
S3_BACKUP_BUCKET=roma-flooring-backups
